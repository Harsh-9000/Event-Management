<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/LoginPageStyles.css">
    <title>Forgot Password</title>
    <script src="https://kit.fontawesome.com/e60263fb6b.js" crossorigin="anonymous"></script>

    <style>
        .img::before {
            content: "";
            position: fixed;
            z-index: -1;
            background-position: center;
            background-size: cover;
            /* position: relative; */
            width: 100%;
            height: 100vh;
            /* background-color: #D9AFD9;
background-image: linear-gradient(0deg, #D9AFD9 0%, #97D9E1 100%); */
            background-color: #4c80c6;
            background-image: linear-gradient(225deg, #4c80c6 0%, #bdb7c0 50%, #313b42 100%);

        }

        .form-border {
            /* border: 2px solid black; */
            margin-top: 3rem;
        }

        .getStarted button {
            padding-left: 6.75em;
            padding-right: 6.75em;
        }
    </style>
</head>

<body>
    <div class="img">
        <div class="logbox" style="box-shadow: 5px 10px 10px 1px  rgba(0, 0, 0, 0.3);">
            <img class="logo_occasion" src="/Images/Logo.png" alt="">
            <h3 id="text" style="color: black;">Forgot Password</h3>

            <form name="forgotPassword" action="/user/forgot" onsubmit="return validateform()" method="post"
                class="form-border">
                <div class="inputgroup">
                    <div class="inputfield">
                        <i class="fa-solid fa-envelope"></i>
                        <input type="email" placeholder="Email" name="email">
                    </div>
                    <div class="inputfield">
                        <i class="fa-solid fa-shield-halved"></i>
                        <input type="password" placeholder="New Password" name="password">
                    </div>
                    <div class="getStarted">
                        <button type="Submit">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <script>

        function validateform() {

            let email = document.form1.email.value;
            let password = document.form1.password.value;

            if (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(email)) {
                if (password.length < 8) {
                    alert("Password must be at least 8 characters long.");
                    return false;
                }
                return true;
            }
            else {
                alert("You have entered an invalid email address!")
                return false;
            }
        }
    </script>
</body>

</html>