<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/LoginPageStyles.css">
    <title>login</title>
    <script src="https://kit.fontawesome.com/e60263fb6b.js" crossorigin="anonymous"></script>

    <style>
        .img::before {
    content: "";
    position: fixed;
    z-index: -1;
    background-position: center;
    background-size: cover;
    /* position: relative; */
    width: 100%;
    height: 100vh;
    background-image: url('/Images/user.jpg');
    filter: opacity(10%);
    filter: brightness(5%);
    filter: contrast(2);
    filter: grayscale(20%);
    filter: blur(0.7px);
  }
    </style>
</head>

<body>
    <div class="img">
        <div class="logbox">
            <!-- <h1 id="text">Sign In</h1> -->
            <img  class="logo_occasion" src="/Images/Logo.png" alt="">
            <div class="btnbx">
                <a href="/login"><button type="button"> Sign In </button></a>
                <a href="/signup"><button type="button" class="dis"> Sign Up </button></a>
            </div>
            <form action="/login" name="form1" onsubmit="return validateform()" method="post"> 
                
                <div class="inputgroup">
                    <div class="inputfield">
                        <i class="fa-solid fa-envelope"></i>
                        <input type="email" placeholder="Email" name="email">
                    </div>
                    <div class="inputfield">
                        <i class="fa-solid fa-shield-halved"></i>
                        <input type="password" placeholder="Password" name="password">
                    </div>
                     <a  href="/user/forgot">Forgot Password?</a>
                    <div class="getStarted">
                        <button type="submit" >Get&nbsp;started</button>
                    </div>
                    
                </div> 
            </form>

        </div>
    </div>
    <script>

        function validateform() {

            let email = document.form1.email.value;
            let password = document.form1.password.value;


            if (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(email)) {
                if (password.length < 8) {
                    alert("Password must be at least 8 characters long.");
                    return false;
                }
                return true;
            }
            else {
                alert("You have entered an invalid email address!")
                return false;
            }
        }
    </script>
</body>

</html>